{
  "functions": {
    "source": "functions",
    "runtime": "nodejs20"
  },
  "hosting": {
    "public": "dist",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "predeploy": [
      "npm run build"
    ],
    "rewrites": [
      { "source": "/api/waitlist", "function": "waitlist" },
      { "source": "**", "destination": "/index.html" }
    ]
  }
}
